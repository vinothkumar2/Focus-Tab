{
  "manifest_version": 3,
  "name": "Focus Tab",
  "version": "1.0",
  "description": "Hide distracting tabs and restore them later.",
  "permissions": [
    "tabs",
    "storage",
    "webNavigation",
    "activeTab"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": "icons/icon48.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "<all_urls>"
  ],
  "icons": {
    "48": "icons/icon48.png"
  }
}
